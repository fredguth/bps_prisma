generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Material {
  ID_MATERIAL Int    @id @default(autoincrement())
  CODIGOBR    String
  DS_CLASSE   String
  PDM         String
  DS_MATERIAL String
  DS_UNIDADE  String
  DISPONIVEL  Int    @default(dbgenerated("true"))
}

model User {
  id          String    @id @unique
  cpf         String    @unique
  email       String?   @unique
  name        String?
  phone       String?
  key         Key[]
  auth_ession Session[]
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  user            User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}
